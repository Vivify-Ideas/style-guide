.theme-container.boilerplates-page .content {
  p {
    display: grid;
    grid-template-columns: auto auto auto;
    grid-gap: .5rem;

    a {
      display: flex;
      justify-content: column;
      border: 1px solid #F0F0F0;
      border-radius: 1rem;
      padding: 1rem;

      &:hover {
        border: 1px solid #D6D6D6;
      }

      img {
        width: 100%;
        height 100%;
      }
      
      svg {
        display: none;
      }
    }
  }
}